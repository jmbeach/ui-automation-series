<Window x:Class="DemoWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="289.831" Width="368.114">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="h1">
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style TargetType="Button" x:Key="button-default">
            <Setter Property="Height" Value="36" />
            <Setter Property="Width" Value="100" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>
    <Grid Margin="20, 50, 20, 50">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource ResourceKey=h1}" TextAlignment="Center">Hello World!</TextBlock>
        <Button Grid.Row="1" Content="Click Me" Style="{StaticResource ResourceKey=button-default}"/>
    </Grid>
</Window>
